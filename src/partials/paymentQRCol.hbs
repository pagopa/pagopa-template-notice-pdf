<div class="instalment-details">
    <div class="instalment-details-data-1st-block">
        <div class="qrcode-area">
            <img class="payment-qrcode" src={{genQrCode this.qrCode this.tempPath}} alt="QR PaymentCode"/>
        </div>

        <dl class="data-key-value-monospaced tight">
            <dt>Euro</dt>
            <dd>{{this.amount}}</dd>
        </dl>

        <dl class="data-key-value-monospaced tight">
            <dt>Entro il</dt>
            <dd>{{this.expiryDate}}</dd>
        </dl>

        <dl class="data-key-value-monospaced tight">
            <dt>Cod. Avviso</dt>
            <dd>{{splitAndSpace this.refNumber}}</dd>
        </dl>

        <div class="grid-cell-span-2 instalment-row-data">
            <dl class="data-key-value-monospaced tight">
                <dt>Cod. Fiscale Ente</dt>
                <dd>{{payee.taxCode}}</dd>
            </dl>
            <dl class="data-key-value-monospaced tight">
                <dt>Cod. CBILL</dt>
                <dd>{{notice.cbillCode}}</dd>
            </dl>
        </div>

    </div>

    <div class="instalment-details-data-2nd-block">
        <dl class="data-key-value">
            <dt>Oggetto del pagamento</dt>
            <dd>{{notice.subject}}</dd>
        </dl>
        <dl class="data-key-value">
            <dt>Ente creditore</dt>
            <dd>{{payee.name}}</dd>
        </dl>
    </div>

    <p class="body">Inquadra il <strong>codice QR</strong> con la tua app di pagamento o usa i dati
        sopra</p>

</div>
