<section class="notice-payment-info">
    <div class="payment-amount-title-block start-separator">
        <h3 class="small-caps-title">
            {{#if notice.expiryDate}}
                Quanto e quando pagare?
            {{else}}
                Quanto pagare?
            {{/if}}
        </h3>
    </div>

    <div class="payment-amount-block start-grid-cell">
        <dl class="amount">
            <dt class="body strong">Importo</dt>
            <dd class="h1">{{notice.amount}} Euro</dd>
        </dl>

        {{#if notice.expiryDate}}
            <dl class="expiry-date">
                <dt class="body strong">entro il</dt>
                <dd class="h1">{{notice.expiryDate}}</dd>
            </dl>
        {{/if}}

        <div class="info-block">

            {{#if notice.instalments.items}}
                <div class="info-paragraph">
                    <img src="./assets/icons/icon-info.svg" class="info-icon" aria-hidden="true"/>
                    <p class="body">Puoi pagare per intero oppure in {{notice.instalments.items.length}} rate</p>
                </div>
            {{/if}}

            <div class="info-paragraph">
                <img src="./assets/icons/icon-info.svg" class="info-icon" aria-hidden="true"/>
                <p class="body">In fase di pagamento, se previsto dallâ€™ente, l'importo potrebbe essere
                    aggiornato
                    automaticamente e subire variazioni in
                    diminuzione
                    (per sgravi, note di credito) o in aumento (per sanzioni, interessi, ecc.).</p>
            </div>

        </div>
    </div>

    {{> paymentMethods }}

</section>
