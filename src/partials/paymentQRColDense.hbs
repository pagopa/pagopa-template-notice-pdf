<div class="instalment-details">
    <div class="instalment-details-data-1st-block compact">
        <div class="qrcode-area">
            <img class="payment-qrcode" src={{genQrCode qrCode tempPath}} alt="QR PaymentCode" />
        </div>

        <dl class="data-key-value-monospaced tight">
            <dt>Euro</dt>
            <dd>{{amount}}</dd>
        </dl>

        <dl class="data-key-value-monospaced tight">
            <dt>{{{languageHandler "paymentInfo.expiryDate.default" classSecondaryLang="muted"}}}</dt>
            <dd>{{expiryDate}}</dd>
        </dl>

        <div class="grid-cell-span-2">
            <dl class="data-key-value-monospaced tight">
                <dt>{{{languageHandler "paymentData.refNumber" forceSecondaryLang="true"}}}</dt>
                <dd>{{splitAndSpace refNumber}}</dd>
            </dl>
        </div>

        <div class="grid-cell-span-2 instalment-row-data">
            <dl class="data-key-value-monospaced tight">
                <dt>{{{languageHandler "paymentData.payeeTaxCode" forceSecondaryLang="true"}}}</dt>
                <dd>{{payee.taxCode}}</dd>
            </dl>
            <dl class="data-key-value-monospaced tight">
                <dt>{{{languageHandler "paymentData.cbillCode" forceSecondaryLang="true"}}}</dt>
                <dd>{{notice.cbillCode}}</dd>
            </dl>
        </div>
    </div>

    {{{languageHandler
    "paymentData.instructions.qrCode.instalments"
    classPrimaryLang="caption black"
    forceSecondaryLang="true"
    align="vertical"
    }}}

</div>