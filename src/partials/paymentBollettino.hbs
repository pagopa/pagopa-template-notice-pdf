<div class="payment-details unique-grid-cell">
    <div class="poste-italiane-area">
        <img class="logo-poste-italiane" src="assets/poste/poste-italiane.svg" alt="Poste Italiane" />
        <img class="logo-bollettino-postale" src="assets/poste/bollettino-postale.svg"
            alt="circuito bollettino postale BancoPosta" />
        {{{languageHandler 'postePayingInSlip.description' classPrimaryLang='body' classSecondaryLang='body muted'
        align="vertical"}}}
        <p class="caption">
            {{notice.posteAuth}}
        </p>
    </div>

    <div class="payment-details-data">

        <div class="account-number-and-amount">
            <div class="account-number">
                <img class="euro-block" src="assets/poste/euro-block.svg" alt="Euro" />
                <dl class="data-key-value-inline-monospaced">
                    <dt>
                        {{{languageHandler 'postePayingInSlip.accountNumber'
                        classSecondaryLang='muted'
                        align="vertical"}}}
                    </dt>
                    <dd>{{notice.posteAccountNumber}}</dd>
                </dl>
            </div>

            <dl class="data-key-value-inline-monospaced align-right valign-start">
                <dt>Euro</dt>
                <dd>{{this.amount}}</dd>
            </dl>
        </div>

        <div class="payment-details-and-datamatrix">

            <div class="payment-details-data-1st-block">

                <dl class="data-key-value-inline">
                    <dt>
                        {{{languageHandler 'postePayingInSlip.owner'
                        classSecondaryLang='muted'
                        classContainer='dense'
                        align="vertical"}}}
                    </dt>
                    <dd>{{payee.name}}</dd>
                </dl>


                <dl class="data-key-value-inline">
                    <dt>
                        {{{languageHandler 'postePayingInSlip.recipient'
                        classSecondaryLang='muted'
                        classContainer='dense'
                        align="vertical"}}}
                    </dt>
                    <dd class="forcedCapitalCase">{{lowercase debtor.fullName}}</dd>
                </dl>


                <dl class="data-key-value-inline">
                    <dt>
                        {{{languageHandler 'postePayingInSlip.paymentDescription'
                        classSecondaryLang='muted'
                        classContainer='dense'
                        align="vertical"}}}
                    </dt>
                    <dd>{{notice.subject}}</dd>
                </dl>


            </div>

            <div class="payment-details-data-2nd-block">

                <div class="grid-cell-span-4">
                    <dl class="data-key-value-monospaced">
                        <dt>
                            {{{languageHandler 'postePayingInSlip.refNumber'
                            classSecondaryLang='muted'
                            classContainer='dense'
                            align="vertical"}}}
                        </dt>
                        <dd>{{splitAndSpace this.refNumber}}</dd>
                    </dl>
                </div>

                <div class="grid-cell-span-1">
                    <dl class="data-key-value-monospaced">
                        <dt>
                            {{{languageHandler 'postePayingInSlip.type'
                            classSecondaryLang='muted'
                            classContainer='dense'
                            align="vertical"}}}
                        </dt>
                        <dd>P1</dd>
                    </dl>
                </div>

                <div class="grid-cell-span-3 align-right">
                    <dl class="data-key-value-monospaced">
                        <dt>{{{languageHandler 'postePayingInSlip.payeeTaxCode'
                            classSecondaryLang='muted'
                            classContainer='dense'
                            align="vertical"}}}</dt>
                        <dd>{{payee.taxCode}}</dd>
                    </dl>
                </div>


            </div>

            <div class="payment-data-matrix">
                <img src={{genDataMatrix this.posteDataMatrix this.tempPath}} alt="Poste DataMatrix" />

                {{!-- We can't use a more elegant solution because we have
                to deal with printing issues by using a mask. --}}
                <div class="frame-border-square top-left"></div>
                <div class="frame-border-square top-right"></div>
                <div class="frame-border-square bottom-left"></div>
                <div class="frame-border-square bottom-right"></div>
            </div>
        </div>

    </div>
</div>