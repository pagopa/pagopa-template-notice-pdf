{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default notice validation schema",
  "description": "Default validation schema",
  "required": ["debtor", "creditorInstitution", "notice" ],
  "properties": {
    "debtor": {
      "type": "object"
    },
    "creditorInstitution": {
      "type": "object"
    },
    "notice": {
      "type": "object",
      "required": ["code","dueDate"],
      "properties": {
        "code": {
          "type": "object"
        },
        "dueDate": {
          "type": "object"
        }
      }
    }
  }
}