{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CDS notice validation schema",
  "description": "CDS notice validation schema",
  "required": ["debtor", "creditorInstitution", "notice" ],
  "properties": {
    "debtor": {
      "type": "object"
    },
    "payee": {
      "type": "object"
    },
    "notice": {
      "type": "object",
      "required": ["dueDate","installments","reducedAmount","discountedAmount"],
      "properties": {
        "reducedAmount": {
          "type": "string"
        },        "dueDate": {
          "type": "string"
        },
        "discountedAmount": {
          "type": "string"
        },
        "installments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["dueDate"],
            "properties": {
              "expiryDate": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}