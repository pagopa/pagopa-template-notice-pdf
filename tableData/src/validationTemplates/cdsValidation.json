{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CDS notice validation schema",
  "description": "CDS notice validation schema",
  "required": ["debtor", "payee", "notice" ],
  "properties": {
    "debtor": {
      "type": "object"
    },
    "payee": {
      "type": "object"
    },
    "notice": {
      "type": "object",
      "required": ["qrCode","expiryDate","installments"],
      "properties": {
        "qrCode": {
          "type": "string"
        },
        "expiryDate": {
          "type": "string"
        },
        "installments": {
          "type": "object",
          "required": ["items", "reduced", "discounted"],
          "properties": {
            "reduced": {
              "type": "object",
              "required": ["amount"]
            },
            "discounted": {
              "type": "object",
              "required": ["amount"]
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["qrCode","expiryDate"],
                "properties": {
                  "qrCode": {
                    "type": "string"
                  },
                  "expiryDate": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}