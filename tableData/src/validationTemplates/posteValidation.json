{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Poste notice validation schema",
  "description": "Poste notice validation schema",
  "required": ["debtor", "creditorInstitution", "notice" ],
  "properties": {
    "debtor": {
      "type": "object"
    },
    "creditorInstitution": {
      "type": "object"
    },
    "notice": {
      "type": "object",
      "required": ["code","posteAuth","posteAccountNumber"],
      "properties": {
        "code": {
          "type": "string"
        },
        "posteAuth": {
          "type": "string"
        },
        "posteAccountNumber": {
          "type": "string"
        }
      }
    }
  }
}