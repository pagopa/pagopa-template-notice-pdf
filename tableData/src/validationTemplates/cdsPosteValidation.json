{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CDS notice validation schema",
  "description": "CDS notice validation schema",
  "required": ["debtor", "creditorInstitution", "notice" ],
  "properties": {
    "debtor": {
      "type": "object"
    },
    "creditorInstitution": {
      "type": "object",
      "required": ["posteAuth","posteAccountNumber"],
      "posteAuth": {
        "type": "string"
      },
      "posteAccountNumber": {
        "type": "string"
      }
    },
    "notice": {
      "type": "object",
      "required": ["reduced","discounted"],
      "properties": {
        "reduced": {
          "type": "object",
          "required": ["code","dueDate"],
          "properties": {
            "code": {
              "type": "string"
            },
            "dueDate": {
              "type": "string"
            }
          }
        },
        "discounted": {
          "type": "object",
          "required": ["code","dueDate"],
          "properties": {
            "code": {
              "type": "object"
            },
            "dueDate": {
              "type": "object"
            }
          }
        }
      }
    }
  }
}