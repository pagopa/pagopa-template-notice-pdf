{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Poste with installments notice validation schema",
  "description": "Poste with installments notice validation schema",
  "required": ["debtor", "creditorInstitution", "notice" ],
  "properties": {
    "debtor": {
      "type": "object"
    },
    "creditorInstitution": {
      "type": "object"
    },
    "notice": {
      "type": "object",
      "required": ["posteAuth","posteAccountNumber","dueDate","installments"],
      "properties": {
        "posteAuth": {
          "type": "string"
        },
        "posteAccountNumber": {
          "type": "string"
        },
        "dueDate": {
          "type": "string"
        },
        "installments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["dueDate"],
            "properties": {
                "dueDate": {
                  "type": "string"
                }
            }
          }
        }
      }
    }
  }
}